<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>47.0</apiVersion>
    <masterLabel>Related Contacts</masterLabel>
    <description>Component that allows quick modification and quick insertion of related contacts.</description>
    <isExposed>true</isExposed>
    <!-- Allows the component to be added to the a record page -->
    <targets>
        <target>lightning__RecordPage</target>
    </targets>  
    <!-- Allows the component to be added to the Account record page -->
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>Account</object>
            </objects>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>